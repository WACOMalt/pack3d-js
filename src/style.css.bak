* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  overflow: hidden;
  background-color: #1a1a1a;
  color: #e0e0e0;
}

#app {
  display: flex;
  width: 100vw;
  height: 100vh;
}

.settings-panel {
  width: 33.333%;
  min-width: 300px;
  max-width: 400px;
  background-color: #2a2a2a;
  border-right: 1px solid #3a3a3a;
  overflow-y: auto;
  padding: 20px;
}

.settings-panel h2 {
  font-size: 1.5rem;
  margin-bottom: 20px;
  color: #60a5fa;
}

.settings-panel h3 {
  font-size: 1.1rem;
  margin-top: 25px;
  margin-bottom: 15px;
  color: #9ca3af;
}

.input-group {
  margin-bottom: 15px;
}

.input-group label {
  display: block;
  margin-bottom: 5px;
  font-size: 0.9rem;
  color: #d1d5db;
}

.input-group input {
  width: 100%;
  padding: 8px;
  border: 1px solid #4a4a4a;
  border-radius: 4px;
  background-color: #1a1a1a;
  color: #e0e0e0;
  font-size: 0.9rem;
}

.input-group input:focus {
  outline: none;
  border-color: #60a5fa;
}

.dimension-inputs {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.dimension-constraints {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.constraint-group {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px;
  background-color: #1a1a1a;
  border: 1px solid #3a3a3a;
  border-radius: 4px;
}

.constraint-group input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
  margin: 0;
}

.constraint-group input[type="checkbox"]:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.constraint-group label {
  min-width: 60px;
  font-size: 0.9rem;
  color: #d1d5db;
}

.constraint-group input[type="number"] {
  width: 100%;
  max-width: 120px;
  height: 30px;
  padding: 0 8px;
  margin-left: auto;
  border: 1px solid #4a4a4a;
  border-radius: 3px;
  background-color: #2a2a2a;
  color: #e0e0e0;
  font-size: 0.9rem;
  step: 0.0625;
}

.constraint-group input[type="number"]:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  background-color: #1a1a1a;
}

.help-text {
  font-size: 0.85rem;
  color: #9ca3af;
  margin-bottom: 12px;
}

.optimized-result {
  margin-top: 15px;
  padding: 12px;
  background-color: #1e3a5f;
  border: 1px solid #3b82f6;
  border-radius: 4px;
  font-size: 0.9rem;
}

.constraint-warning {
  font-size: 0.8rem;
  color: #fca5a5;
  margin-top: 4px;
  font-weight: 500;
}

.box-list {
  margin-top: 10px;
  max-height: 400px;
  overflow-y: auto;
  border: 1px solid #3a3a3a;
  border-radius: 4px;
  padding: 5px;
  background-color: #222;
}

/* Scrollbar styling for box list */
.box-list::-webkit-scrollbar {
  width: 8px;
}
.box-list::-webkit-scrollbar-track {
  background: #1a1a1a;
}
.box-list::-webkit-scrollbar-thumb {
  background: #4a4a4a;
  border-radius: 4px;
}
.box-list::-webkit-scrollbar-thumb:hover {
  background: #555;
}

/* Adjust box item for labels */
.box-item {
  display: grid;
  grid-template-columns: auto 1fr auto 1fr auto 1fr auto 1fr auto;
  align-items: center;
  gap: 6px;
  padding: 8px 10px; /* Comfortable padding around the row */
  margin-bottom: 6px;
  background-color: #232323; /* Slight background to distinguish rows */
  border-radius: 4px;
}

.box-label {
  font-size: 0.8rem;
  color: #94a3b8;
  font-weight: 600;
  user-select: none;
}

.box-label.x-label {
  margin-left: 12px;
  color: #60a5fa;
  font-size: 1.1rem;
}

/* Update inputs to fit with labels */
.box-item input {
  width: 100%; /* Fill the grid cell */
  min-width: 0; /* Prevent overflow */
  height: 32px; /* Taller click target */
  padding: 0 4px; /* remove unnecessary padding */
  text-align: center;
  background-color: #2a2a2a;
  border: 1px solid #4a4a4a;
  border-radius: 3px;
  color: #e0e0e0;
}

.box-item input:focus {
  border-color: #60a5fa;
  background-color: #333;
}

.box-item input.box-quantity {
    width: 100%;
}

.remove-box-btn {
    /* No margin needed in grid */
}

.box-item button {
  padding: 6px 10px;
  background-color: #ef4444;
  color: white;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  font-size: 0.85rem;
}

.box-item button:hover {
  background-color: #dc2626;
}

.add-box-btn {
  width: 100%;
  padding: 10px;
  background-color: #60a5fa;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1rem;
  margin-top: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
}

.add-box-btn:hover {
  background-color: #3b82f6;
}

.optimize-btn {
  width: 100%;
  padding: 12px;
  background-color: #10b981;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1.1rem;
  margin-top: 20px;
  font-weight: 600;
}

.optimize-btn:hover {
  background-color: #059669;
}

.optimize-btn:disabled {
  background-color: #4a4a4a;
  cursor: not-allowed;
}

.viewport-3d {
  flex: 1;
  position: relative;
  background-color: #0f0f0f;
}

.viewport-3d canvas {
  display: block;
  width: 100%;
  height: 100%;
}

.stats-panel {
  position: absolute;
  top: 10px;
  left: 10px;
  background-color: rgba(42, 42, 42, 0.9);
  padding: 15px;
  border-radius: 4px;
  border: 1px solid #3a3a3a;
  font-size: 0.9rem;
  min-width: 200px;
}

.stats-panel h4 {
  margin-bottom: 10px;
  color: #60a5fa;
}

.stats-panel p {
  margin: 5px 0;
  color: #d1d5db;
}

.status-message {
  margin-top: 15px;
  padding: 12px;
  background-color: #1e293b;
  border: 1px solid #334155;
  border-radius: 6px;
  font-size: 0.9rem;
}

.status-message strong {
  display: block;
  margin-bottom: 8px;
  color: #60a5fa;
  font-size: 1rem;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  color: #cbd5e1;
}

.stat-bar-container {
  display: flex;
  height: 8px;
  width: 100%;
  background-color: #334155;
  border-radius: 4px;
  overflow: hidden;
  margin: 8px 0;
}

.stat-bar-fill {
  height: 100%;
}

.stat-bar-fill.used {
  background-color: #10b981;
}

.stat-bar-fill.empty {
  background-color: #ef4444;
}

.time-row {
  margin-top: 8px;
  font-size: 0.8rem;
  color: #94a3b8;
  border-top: 1px solid #334155;
  padding-top: 4px;
}

/* Removed box-list-header */

/* Match widths with renderBoxItem inputs */
.col-w, .col-h, .col-d {
  width: 50px;
}
.col-q {
  width: 50px; 
  flex-grow: 1;
}
.col-x {
  width: 24px;
}

.failure-reason {
  color: #ef4444;
  font-size: 0.8rem;
  margin-bottom: 8px;
  padding-bottom: 8px;
  border-bottom: 1px dashed #4b5563;
}

/* Modal Styles */
.optimization-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.optimization-content {
  background-color: #1e293b;
  padding: 30px;
  border-radius: 8px;
  border: 1px solid #475569;
  text-align: center;
  min-width: 300px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
}

.optimization-content h3 {
  margin-bottom: 15px;
  color: #60a5fa;
  font-size: 1.2rem;
}

.optimization-content p {
  margin-bottom: 20px;
  color: #cbd5e1;
  font-size: 0.95rem;
}

.progress-bar {
  width: 100%;
  height: 10px;
  background-color: #334155;
  border-radius: 5px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #3b82f6;
  width: 0%;
  transition: width 0.3s ease;
}


/* Remove spinners from number inputs */
/* Chrome, Safari, Edge, Opera */
input[type=number]::-webkit-outer-spin-button, 
input[type=number]::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type=number] {
  -moz-appearance: textfield;
}

